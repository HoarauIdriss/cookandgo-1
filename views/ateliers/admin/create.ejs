<% include ../../partials/head.ejs %>

    <body class="bg-orange">
        <div class="container-fluid bg-orange">

                <a href="/ateliers/admin" class="btn btn-success">  <i class="fas fa-reply mr-3"></i>Retour </a>
            <div class="container p-5 d-flex justify-content-center bg-light">
       
                <!--*****************************************-->

                <!-- SECTION CREATION ATELIER -->

                <!--*****************************************-->
                <div class="row ">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title mb-3"> Créer votre atelier
                            </h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" action="/ateliers/admin/save" method="POST" class="needs-validation" novalidate>
                                <div class="form-group">

                                    <div class="form-group">
                                        <label> Nom de votre atelier</label>
                                        <input type="text" name="titre" id="titre" class="form-control input-sm" placeholder="Nom *" required>
                                        <div class="invalid-feedback text-left">
                                            Entrez le nom de votre atelier
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label> Date prévu :</label>
                                    <div class="form-group">
                                        <input type="date" name="date" id="date" class="form-control input-sm" placeholder="" required>
                                        <div class="invalid-feedback text-left">
                                            Entrez la date prévu de votre atelier
                                        </div>
                                    </div>

                                </div>




                                <div class="form-group">

                                    <label> Heure de début :</label>
                                    <input type="time" name="horaire" id="horaire" class="form-control input-sm" placeholder="Email Address *" required>
                                    <div class="invalid-feedback text-left">
                                        Entrez l'heure de début
                                    </div>
                                </div>

                                <div class="form-group">

                                    <label> Durée estimé en heures :</label>
                                    <input type="number" name="duree" id="duree" class="form-control input-sm" placeholder="">
                                    <div class="invalid-feedback text-left">
                                        Entrez la durée de votre atelier
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label> Description de votre atelier </label>
                                    <textarea name="description" id="description" class="form-control input-sm" placeholder=""></textarea>
                                    <div class="invalid-feedback text-left">
                                        Entrez une description de votre atelier
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Image représentant votre atelier </label>
                                    <input name="image" id="image" class="form-control input-sm" placeholder="">
                                    </textarea>
                                    <div class="invalid-feedback text-left">
                                        Mettre une image
                                    </div>
                                </div>
                                <div class="form-group">
                                        <label> Places disponible </label>
                                        <input name="places_disponible" id="places_disponible" class="form-control input-sm" placeholder="">
                                        <div class="invalid-feedback text-left">
                                            Entrez une description de votre atelier
                                        </div>
                                    </div>
                                    <div class="form-group">
                                           
                                            <input type="hidden" name="places_reservees" id="places_reservees" class="form-control input-sm" placeholder="" value="0">
                                        
                                        </div>
                                    <div class="form-group">
                                            <label> Prix </label>
                                            <input type="number" name="prix" id="prix" class="form-control input-sm" placeholder="">
                                            <div class="invalid-feedback text-left">
                                                Entrez une description de votre atelier
                                            </div>
                                        </div>
                                    <div class="form-group">
                                            <label for="actif" class="mt-3">Actif</label>
                                            <input type="checkbox" name="actif" id="actif">
                                          </div>
                                        </div>



                                <input type="hidden" name="droit" id="droit" value="0" required>
                                <button type="submit" value="Register" class="btn btn-danger btn-block"> AJOUTER</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <script>
            // Validation des champs du formulaire via JavaScript
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {

                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }

                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        </script>
    </body>
